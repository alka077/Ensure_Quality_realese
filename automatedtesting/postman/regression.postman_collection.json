{
	"info": {
		"_postman_id": "db312b8a-4a4e-4199-a0d9-da6b79dc4bf9",
		"name": "Starter APIs Copy",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
